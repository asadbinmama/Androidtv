<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    tools:context="com.programerworld.project1.MainActivity">

    <TextView
        android:id="@+id/Signuptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="รหัสมัสยิด 5 หลัก"
        android:textSize="70dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/numcode"
        android:layout_width="550dp"
        android:layout_height="100dp"
        android:layout_below="@id/Signuptitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#30ffffff"
        android:drawablePadding="50dp"
        android:gravity="center_horizontal"
        android:hint="ตัวอย่าง 90050"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="50sp"
        android:inputType="number"
        />

    <Button
        android:id="@+id/button_in_timepray"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/numcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="ตกลง"
        android:textColor="#0E0D0D"
        android:backgroundTint="@color/white"
        android:onClick="actimepray"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/open_button"
        android:layout_width="270dp"
        android:layout_height="66dp"
        android:layout_below="@id/button_in_timepray"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:background="#00FFFFFF"
        android:onClick="openPrivacyPolicy"
        android:text="@string/thai"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>